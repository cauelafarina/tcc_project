.required {
    position: relative;
    margin: 10px 0px ;
    padding-bottom: .5em;
    border-bottom: 1px solid #eee;
}

.required input,
.required textarea {
    z-index: 1;
    position: relative;
    padding-right: 0;
    padding-left: 0;
    border: 0;
    border-radius: 0;
    font-size: 1.5em;
    background: 0 0;
    box-shadow: none!important;
    resize: none;
}